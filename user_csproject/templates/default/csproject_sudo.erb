# Granting sudo access for specific commands

## Memcached
Cmnd_Alias MEMCACHED = /usr/sbin/service memcached start, /usr/sbin/service memcached stop, /usr/sbin/service memcached restart, /usr/bin/memcache-top

## MySQL
Cmnd_Alias MYSQLD = /sbin/stop mysql, /sbin/start mysql, /sbin/restart mysql

## Apache
Cmnd_Alias APACHE = /usr/sbin/service apache2 start, /usr/sbin/service apache2 stop, /usr/sbin/service apache2 restart, /usr/sbin/service apache2 graceful

## nginx
Cmnd_Alias NGINX = /usr/sbin/service nginx *

## mongodb
Cmnd_Alias MONGODB = /usr/sbin/service mongodb *

## Reboot
Cmnd_Alias REBOOT = /sbin/reboot

## Install
Cmnd_Alias INSTALL = /usr/bin/apt-get *, /usr/bin/aptitude *, /usr/bin/pip *, /usr/bin/dpkg *

## Tools
Cmnd_Alias TOOLS = /usr/bin/python *, /usr/bin/php *

## redis
Cmnd_Alias REDIS = /usr/sbin/service redis *

## php5-fpm
Cmnd_Alias  PHP5FPM = /sbin/stop php5-fpm, /sbin/start php5-fpm, /sbin/restart php5-fpm

## ln
Cmnd_Alias LN = /bin/ln

## nodejs package manager
Cmnd_Alias NPM = /usr/bin/npm *

## opsworks control
Cmnd_Alias OPSWORKS = /usr/bin/opsworks.sh

<%= node[:csproject_environment][:username] %> ALL=NOPASSWD:<%= @commands %>
